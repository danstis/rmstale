# https://editorconfig.org/
root = true

[*]
indent_style = tab
indent_size = 4
tab_width = 4
charset = utf-8
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.js]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
